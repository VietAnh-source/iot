<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/iotlogo"
        android:label="IOT Management"
        android:roundIcon="@drawable/iotlogowbg"
        android:supportsRtl="true"
        android:theme="@style/Theme.Iot_management"
        tools:targetApi="31">

        <!-- Corrected activity name to Follow camel case convention -->
        <activity
            android:name=".Activity.ForgetPasswordActivity"
            android:exported="false" />

        <activity
            android:name=".Activity.RoomDetail"
            android:exported="false" />

        <activity
            android:name=".Activity.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Activity.loginActivity"
            android:exported="true" />

        <activity
            android:name=".Activity.registerActivity"
            android:exported="true" />

        <activity
            android:name=".Activity.MainActivity"
            android:exported="true" />
    </application>

</manifest>
